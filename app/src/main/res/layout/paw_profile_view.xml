<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    card_view:cardBackgroundColor="@color/color_white"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="3"
        app:cardCornerRadius="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:src="@drawable/dog_owner"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:alpha="0.8"
            card_view:ignore="MissingConstraints" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/name"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/paw_name"
            android:hint="My Paw Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/name"
            app:layout_constraintTop_toTopOf="@id/name"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breed: "
            app:layout_constraintTop_toBottomOf="@id/paw_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/breedType"
            android:textColor="@color/black"
            />


        <TextView
            android:hint="Breed"
            android:id="@+id/breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/breedType"
            app:layout_constraintTop_toTopOf="@id/breedType"
            android:textColor="@color/black"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: "
            app:layout_constraintTop_toBottomOf="@id/breedType"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/age2"
            android:textColor="@color/black"
            />

        <TextView
            android:hint="Age"
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/age2"
            app:layout_constraintTop_toTopOf="@id/age2"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quirks: "
            app:layout_constraintTop_toBottomOf="@id/age2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/quirks2"
            android:textColor="@color/black"
            />

        <TextView
            android:hint="Personality/quirks"
            android:id="@+id/quirks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/quirks2"
            app:layout_constraintTop_toTopOf="@id/quirks2"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaccinations: "
            app:layout_constraintTop_toBottomOf="@id/quirks2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/vac"
            android:textColor="@color/black"
            />

        <TextView
            android:hint="Vaccinations"
            android:id="@+id/vaccinations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/vac"
            app:layout_constraintTop_toTopOf="@id/vac"
            android:textColor="@color/black"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/extras"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:clickable="true"
            app:srcCompat="@drawable/_065255"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>




    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>